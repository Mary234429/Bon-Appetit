                    <% for(let j=0; j < breakfastRecipes.at(i).ingredients.length; j++){ %>
                      <% var ingredientId=breakfastRecipes[i].ingredients[j]; var ingredient=ingredients.find(item=>
                        item.id === ingredientId);
                        if (ingredient) {
