<!-- dashboard.ejs -->
<html>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  crossorigin="anonymous" referrerpolicy="no-referrer" />


<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="dashboard.css" />
</head>

<body class="dashboard-page">
  <div class="black-rectangle-top"></div>
  <div class="topPanel">
    <div class="wheat_1"></div>
    <div class="wheat_2"></div>
  </div>

  <header>
    <h1>B o n&nbsp;&nbsp;&nbsp;A p p e t i t</h1>
    <t> healthy cooking</t>
  </header>

  <!-- Navbar -->
  <nav class="navbar">
    <ul>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/about">About Us</a></li>



      <li class="dropdown">
        <a href="/profile" class="dropbtn">

          Profile
          <i class="fa fa-caret-down"></i>
        </a>
        <div class="dropdown-content">
          <a href="/dietTracker">Diet Tracker</a>
          <a href="/recipeCreate">Recipe Create</a>
          <a href="/dietPlanCreate">Diet Plan Create</a>
        </div>
      </li>
    </ul>
  </nav>

  <div class="bottomPanel">
    <div class="dashboard_pic"></div>
  </div>


  <div class="top-bottomPanel">
    <h2>LET'S GET</h2>
    <h3>Cooking</h3>
  </div>

  <!-- Search bar for recipe -->

  <div class="inputField">

    <input type="text" class="SearchTextBox" placeholder="Search for recipe" name="search" id="search" />
  </div>


  <!-- Recipe container -->
  <div class="recipeContainer">


    <!-- Breakfast recipes -->
    <div class="breakfastContainer">
      <h4>Breakfast</h4>
      <div class="recipeWrapper">
        <% for(let i=0; i < breakfastRecipes.length; i++) { %>
          <div data-recipe="<%= breakfastRecipes.at(i) %>" class="recipeBreakfast">
            <h7 class="breakfast-recipe-name">
              <%= breakfastRecipes.at(i).name %>
            </h7>
            <div class="recipeBreakfastPic"></div>
          </div>
          <% } %>
      </div>
    </div>


    <!-- Lunch recipes -->
    <div class="lunchContainer">
      <h4>Lunch</h4>
      <div class="recipeWrapper">
        <% for(let i=0; i < lunchRecipes.length; i++){%>
          <div data-recipe="<%=lunchRecipes.at(i)%>" class="recipeLunch">
            <h7 class="lunch-recipe-name">
              <%=lunchRecipes.at(i).name%>
            </h7>
          </div>
          <div class="recipeLunchPic"></div>
          <% } %>
      </div>
    </div>

    <!-- Dinner recipes -->
    <div class="dinnerContainer">
      <h4>Dinner</h4>
      <div class="recipeWrapper">
        <% for(let i=0; i < dinnerRecipes.length; i++){%>
          <div data-recipe="<%=dinnerRecipes.at(i)%>" class="recipeDinner">
            <h7 class="dinner-recipe-name">
              <%=dinnerRecipes.at(i).name%>
            </h7>
          </div>
          <div class="recipeDinnerPic"></div>
          <% } %>
      </div>
    </div>

    <!-- Snacks recipes -->
    <div class="snacksContainer">
      <h4>Snacks</h4>
      <div class="recipeWrapper">
        <% for(let i=0; i < snackRecipes.length; i++){%>
          <div data-recipe="<%=snackRecipes.at(i)%>" class="recipeSnacks">
            <%=snackRecipes.at(i).name%>
          </div>
          <div class="recipeSnacksPic"></div>
          <% } %>
      </div>
    </div>

  </div>
</body>

</html>