<!--recipe Create page-->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Food!</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lustria&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="addFood.css" />
</head>

<body>
    <h1>
        <%=mealType%>

    </h1>
    <f>
        <%=formatedDate%>
    </f>
    <!-- <a href="/recipeCreate">Create a Recipe Thats Not Found</a> -->

    <form action="/addDiet" method="post">
        <input type="hidden" value="<%=formatedDate %>" name="date" id="date" />
        <input type="hidden" value="<%=mealType%>" name="mealType" id="mealType" />
        <p>Portion Size:
            <select name="portion" id="portion">
                <option value=0.125>1/8</option>
                <option value=0.25>1/4</option>
                <option value=0.33>1/3</option>
                <option value=0.375>3/8</option>
                <option value=0.5>1/2</option>
                <option value=0.6>2/3</option>
                <option value=0.625>5/8</option>
                <option value=0.75>3/4</option>
                <option value=0.875>7/8</option>
                <!-- Add more options as needed -->
            </select>
        </p>
        <p>Recipe Name to add:</p>
        <ul style="list-style-type: none; padding: 0;"> <!-- Removes bullet points and padding -->
            <li>
                <div style="display: inline"></div>
                <select class="Recipe js-example-basic-single" name="RecipeName">
                    <option selected value=""></option>
                    <% for(let i=0; i < Recipes.length; i++){%>
                        <option value="<%=Recipes.at(i)._id%>" data-unit="<%=Recipes.at(i)._id%>">
                            <%=Recipes.at(i).name%> (<%=Recipes.at(i).calories%> Cals)
                        </option>
                        <%}%>
                </select>
            </li>
        </ul>

        <input type="submit" value="Submit" />
    </form>
</body>

</html>