<html>
	<head>
		<meta charset="UTF-8"></meta>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"></meta>
		<title>Date Selection with EJS</title>
	</head>
	<h1>
		<%= title %>
		<%= formatedDate %>
	</h1>
	<form action="/dashboard" method="get">
		<button type="submit">Go to Main Page</button>
	</form>
	<form id="dateForm">
		<label for="datepicker">Select a Date:</label>
		<input type="date" id="datepicker" value=""
			<%=formatedDate%> name="datepicker" onchange="submitForm()">
		</input>
	</form>
	<script>
		function submitForm() {
		document.getElementById("dateForm").submit();
		}
	</script>
	<h1>Calories 0/2000</h1>
	<h2>Breakfast</h2>
		 <div class="recipeWrapper">
        <% for(let i=0; i < breakfastNames.length; i++) { %>
          <div data-recipe="<%= breakfastNames.at(i) %>" class="recipeBreakfast">
            <h7 class="breakfast-recipe-name">
              <%= breakfastNames.at(i) %>
            </h7>
          </div>
          <% } %>
      </div>
		 <form action="/addFood" method="get">
			 <input type="hidden"
				 value="<%= formatedDate %>"
				 name="date"
				 id="date" />
			 <input type="hidden"
				 value="Breakfast"
				 name="mealType"
				 id="mealType" />
			 <button type="submit">Add food</button>
		 </form>
	<h2>Lunch</h2>
		<div class="recipeWrapper">
			<% for(let i=0; i< lunchNames.length; i++) { %>
			<div data-recipe=""
				<%= lunchNames.at(i) %>" class="recipeLunch">
				<h7 class="Lunch-recipe-name">
					<%= lunchNames.at(i) %>
				</h7>
			</div>
				<% } %>
			</div>
	<form action="/addFood" method="get">
		<input type="hidden"
			   value="<%= formatedDate %>"
			   name="date"
			   id="date" />
		<input type="hidden"
			   value="Lunch"
			   name="mealType"
			   id="mealType" />
		<button type="submit">Add food</button>
	</form>
	<h2>Dinner</h2>
		<div class="recipeWrapper">
			<% for(let i=0; i< dinnerNames.length; i++) { %>
			<div data-recipe=""
				<%= dinnerNames.at(i) %>" class="recipeDinner">
				<h7 class="Dinner-recipe-name">
					<%= dinnerNames.at(i) %>
				</h7>
			</div>
			<% } %>
		</div>
	<form action="/addFood" method="get">
		<input type="hidden"
			   value="<%= formatedDate %>"
			   name="date"
			   id="date" />
		<input type="hidden"
			   value="Dinner"
			   name="mealType"
			   id="mealType" />
		<button type="submit">Add food</button>
	</form>
	<h2>Snacks</h2>
	<div class="recipeWrapper">
		<% for(let i=0; i< snackNames.length; i++) { %>
		<div data-recipe=""
			<%= snackNames.at(i) %>" class="recipeSnack">
			<h7 class="Snack-recipe-name">
				<%= snackNames.at(i) %>
			</h7>
		</div>
		<% } %>
	</div>
	<form action="/addFood" method="get">
		<input type="hidden"
			   value="<%= formatedDate %>"
			   name="date"
			   id="date" />
		<input type="hidden"
			   value="Snacks"
			   name="mealType"
			   id="mealType"/>
		<button type="submit">Add Snacks</button>
	</form>
</html>